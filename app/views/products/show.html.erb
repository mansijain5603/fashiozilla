<div class="container">
  <div class="row">
    
    <div class="col-sm">
      <% if @product.images.attached? %>
        <% @product.images.each do |image| %>
        <%= image_tag image, width: "400px", height: "420px"%>
        <% end %>
      <%end%>
    </div>
    

    <div class="col-sm">
